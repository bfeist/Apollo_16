{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "__mocks__/*": ["./__mocks__/*"],
      "components/*": ["./components/*"],
      "client/*": ["./client/*"],
      "public/*": ["./public/*"],
      "server/*": ["./server/*"],
      "services/*": ["./services/*"],
      "static/*": ["./static/*"],
      "store/*": ["./store/*"],
      "typings/*": ["./typings/*"],
      "utils/*": ["./utils/*"],
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "react"
  }
}
