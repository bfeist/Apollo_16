{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "client/*": [
        "client/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "public/*": [
        "./public/*"
      ],
      "server/*": [
        "server/*"
      ],
      "services/*": [
        "services/*"
      ],
      "store/*": [
        "./store/*"
      ],
      "typings": [
        "./typings/index.d"
      ],
      "typings/*": [
        "./typings/*"
      ],
      "utils/*": [
        "./utils/*"
      ]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
